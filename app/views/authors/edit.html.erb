<div class="container">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img src="<%= @author.avatar_img %>" alt="Admin" class="rounded-circle" width="150">
              <div class="mt-3">
                <h4>
                  <%= @author.name %>
                </h4>
                <p class="text-secondary mb-1">
                  <%= @author.qualification %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <%= render "form", author: @author %>
      </div>
    </div>
  </div>
</div>
