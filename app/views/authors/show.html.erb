<div class="container">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <% if @author.avatar_img.attached? %>
                <%= cl_image_tag @author.avatar_img.key, height: 100 %>
              <% else %>
                <img class="d-flex" src="<%= @author.avatar_img %>" alt="<%= @author.name %>">
              <% end %>
              <div class="mt-3">
                <h4>
                  <%= @author.name %>
                </h4>
                <p class="text-secondary mb-1">
                  <%= @author.qualification %>
                </p>
                <%= link_to "Editar membro" , edit_author_path(@author), class: 'btn btn-primary' %>
                  <%# <%=button_to 'Deactivate' , deactivate_author_path(@author), method: :patch, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <h2>Publicações</h2>
        <div class="font-13 text-success mb-3">
          <% @publications.each do |publication| %>
            <%= link_to publication.title, publication_path(publication) %>
          <% end %>

          <h2>livro</h2>
        <div class="font-13 text-success mb-3">
          <% @books.each do |book| %>
            <%= link_to book.title, publication_path(book) %>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
